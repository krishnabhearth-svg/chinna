<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GyM - Grandmother Youth Mentorship</title>
    <style>
        /* Ultra Minimalist Reset */
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        :root {
            --black: #000000;
            --white: #ffffff;
            --gray-50: #fafafa;
            --gray-800: #262626;
        }
        
        body {
            font-family: system-ui, sans-serif;
            background: var(--white);
            color: var(--black);
            overflow: hidden;
            height: 100vh;
            touch-action: manipulation;
        }
        
        #app {
            height: 100vh;
            width: 100vw;
            position: relative;
        }
        
        /* Sections - Pull Based Navigation */
        .section {
            display: none;
            height: 100vh;
            width: 100vw;
            padding: 2rem;
            position: absolute;
            top: 0;
            left: 0;
            animation: fadeIn 0.6s ease-out;
        }
        
        .section.active {
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: center;
        }
        
        /* Revolutionary Pull Interface */
        .pull-ecosystem {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }
        
        .pull-btn {
            width: 5rem;
            height: 5rem;
            border-radius: 50%;
            background: var(--black);
            border: none;
            color: var(--white);
            cursor: pointer;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            font-weight: 600;
            font-size: 0.8rem;
        }
        
        .pull-btn:active {
            transform: scale(0.92);
            background: var(--white);
            color: var(--black);
            border: 2px solid var(--black);
        }
        
        /* Content Cards */
        .wisdom-card {
            background: var(--white);
            border: 1px solid var(--gray-50);
            border-radius: 1rem;
            padding: 1.5rem;
            margin: 1rem 0;
            transition: all 0.3s ease;
        }
        
        .wisdom-card:active {
            border-color: var(--black);
            transform: translateY(-2px);
        }
        
        /* Typography */
        .responsive-heading {
            font-size: clamp(2rem, 8vw, 3rem);
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 1.5rem;
        }
        
        .responsive-text {
            font-size: clamp(1rem, 4vw, 1.2rem);
            line-height: 1.6;
            color: var(--gray-800);
        }
        
        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        /* Progress Dots */
        .progress-dots {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
            margin: 2rem 0;
        }
        
        .progress-dot {
            width: 0.5rem;
            height: 0.5rem;
            border-radius: 50%;
            background: var(--gray-50);
            border: 1px solid var(--gray-800);
            transition: all 0.3s ease;
        }
        
        .progress-dot.active {
            background: var(--black);
            transform: scale(1.3);
        }
        
        /* Energy Saver */
        .energy-saver {
            position: fixed;
            top: 1rem;
            left: 1rem;
            background: var(--white);
            border: 1px solid var(--gray-50);
            padding: 0.5rem 1rem;
            border-radius: 1rem;
            font-size: 0.7rem;
        }
    </style>
</head>
<body>
    <div id="app">
        <!-- Energy Saver Display -->
        <div class="energy-saver">
            âš¡ <span id="energyPercent">95%</span> energy saved
        </div>
        
        <!-- Pull Navigation -->
        <div class="pull-ecosystem">
            <button class="pull-btn" onclick="pullNextWisdom()">
                <div style="font-size: 1.2rem;">â¬‡</div>
                <div>PULL</div>
            </button>
        </div>
        
        <!-- Progress Indicators -->
        <div class="progress-dots" id="progressDots"></div>
        
        <!-- Sections -->
        <section id="welcome" class="section active">
            <div>
                <h1 class="responsive-heading">GyM Wisdom</h1>
                <p class="responsive-text">Grandmother Youth Mentorship<br>Pull to discover timeless wisdom</p>
                
                <div style="margin: 2rem 0;">
                    <div class="wisdom-card" onclick="showSection(1)">
                        <h3 style="margin-bottom: 0.5rem;">Begin Journey</h3>
                        <p class="responsive-text">Touch to start learning</p>
                    </div>
                </div>
            </div>
        </section>
        
        <section id="beej" class="section">
            <div>
                <h2 class="responsive-heading">Beej Framework</h2>
                <p class="responsive-text">Seed â€¢ Nourish â€¢ Grow â€¢ Transform</p>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin: 2rem 0;">
                    <div class="wisdom-card" onclick="exploreConcept('seed')">
                        <div style="font-size: 2rem; margin-bottom: 0.5rem;">ðŸŒ±</div>
                        <h4>Seed</h4>
                    </div>
                    <div class="wisdom-card" onclick="exploreConcept('grow')">
                        <div style="font-size: 2rem; margin-bottom: 0.5rem;">ðŸŒ¿</div>
                        <h4>Grow</h4>
                    </div>
                </div>
            </div>
        </section>
        
        <section id="contribute" class="section">
            <div>
                <h2 class="responsive-heading">Your Wisdom</h2>
                <p class="responsive-text">Share your insight in 2-3 words</p>
                
                <div style="margin: 2rem 0;">
                    <input type="text" id="wisdomInput" placeholder="Share wisdom..." 
                           style="width: 100%; padding: 1rem; border: 1px solid #ddd; border-radius: 0.5rem; font-size: 1rem;"
                           maxlength="30">
                    <button onclick="shareWisdom()" 
                            style="width: 100%; background: black; color: white; border: none; padding: 1rem; border-radius: 0.5rem; margin-top: 1rem; font-size: 1rem;">
                        Share Insight
                    </button>
                </div>
            </div>
        </section>
    </div>

    <script>
        // Core Navigation System
        const sections = ['welcome', 'beej', 'contribute'];
        let currentSection = 0;
        
        function initializeApp() {
            createProgressDots();
            showSection(0);
        }
        
        function createProgressDots() {
            const container = document.getElementById('progressDots');
            sections.forEach((_, index) => {
                const dot = document.createElement('div');
                dot.className = 'progress-dot';
                dot.addEventListener('click', () => showSection(index));
                container.appendChild(dot);
            });
        }
        
        function showSection(index) {
            currentSection = index;
            
            // Hide all sections
            sections.forEach(section => {
                document.getElementById(section).classList.remove('active');
            });
            
            // Show current section
            document.getElementById(sections[index]).classList.add('active');
            
            // Update progress dots
            updateProgressDots();
            
            // Update energy savings
            updateEnergySavings();
        }
        
        function updateProgressDots() {
            const dots = document.querySelectorAll('.progress-dot');
            dots.forEach((dot, index) => {
                dot.classList.toggle('active', index === currentSection);
            });
        }
        
        function updateEnergySavings() {
            const loadedFraction = (currentSection + 1) / sections.length;
            const energySaved = 100 - (loadedFraction * 100);
            document.getElementById('energyPercent').textContent = Math.round(energySaved) + '%';
        }
        
        function pullNextWisdom() {
            const nextSection = (currentSection + 1) % sections.length;
            showSection(nextSection);
        }
        
        function exploreConcept(concept) {
            // For future expansion
            alert(`Exploring ${concept} - This will open detailed learning`);
        }
        
        function shareWisdom() {
            const input = document.getElementById('wisdomInput');
            const wisdom = input.value.trim();
            
            if (wisdom.length > 0 && wisdom.split(' ').length <= 3) {
                alert(`Thank you for sharing: "${wisdom}" - This wisdom will be added to our collective learning`);
                input.value = '';
            } else {
                alert('Please share 1-3 words of deep wisdom');
            }
        }
        
        // Touch gesture support
        let touchStartY = 0;
        document.addEventListener('touchstart', (e) => {
            touchStartY = e.touches[0].clientY;
        });
        
        document.addEventListener('touchend', (e) => {
            const touchEndY = e.changedTouches[0].clientY;
            const diffY = touchStartY - touchEndY;
            
            if (Math.abs(diffY) > 50) {
                if (diffY > 0) {
                    pullNextWisdom();
                } else {
                    const prevSection = (currentSection - 1 + sections.length) % sections.length;
                    showSection(prevSection);
                }
            }
        });
        
        // Initialize
        document.addEventListener('DOMContentLoaded', initializeApp);
    </script>
</body>
</html>
